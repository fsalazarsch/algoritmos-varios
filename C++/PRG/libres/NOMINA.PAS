PROCEDURE CUADRO;
BEGIN
CLRSCR;
     FIL:=2;
     COL:=5;
     FOR Y:=1 TO 23 DO
     BEGIN
     GOTOXY(2,FIL);WRITELN('²');
     GOTOXY(74,FIL);WRITELN('²');
     FIL:=FIL+1;
     DELAY(50);
     END;
         FOR Z:=1 TO 67 DO
         BEGIN
         GOTOXY(COL,2);WRITELN('²');
         GOTOXY(COL,24);WRITELN('²');
         COL:=COL+1;
         DELAY(50);
         END;
         END;
BEGIN
CUADRO;
GOTOXY(25,5);WRITELN('NOMINA DEL MES DE               ');
GOTOXY(43,5);READ(MES);
GOTOXY(22,6);WRITELN('================================');
GOTOXY(12,8);WRITELN('NUMERO DE EMPLEADOS:   ');
GOTOXY(37,8);READLN(NEMP);
DELAY(6500);
BEGIN
CLRSCR;
CUADRO;
GOTOXY(28,6);WRITELN('"DATOS GENERALES"');
GOTOXY(28,7);WRITELN('=================');
GOTOXY(12,10);WRITELN('NOMBRE                          :    ');
GOTOXY(45,10);READ(NOM);
GOTOXY(12,11);WRITELN('SUELDO BASICO                   :    ');
GOTOXY(45,11);READ(BASMEN);
GOTOXY(12,12);WRITELN('DIAS TRABAJADOS                 :    ');
GOTOXY(45,12);READ(DT);
GOTOXY(12,13);WRITELN ('CANT. RECARGOS NOCTURNOS       :    ');
GOTOXY(45,13);READ(CRN);
GOTOXY(12,14);WRITELN('HORAS EXTRAS DIURNAS            :    ');
GOTOXY(45,14);READ(HED);
GOTOXY(12,15);WRITELN('HORAS EXTRAS NOCTURNAS          :    ');
GOTOXY(45,15);READ(HEN);
GOTOXY(12,16);WRITELN('HORAS EXTRAS FESTIVAS DIURNAS    ');
GOTOXY(45,16);READ(HEDF);
GOTOXY(12,16);WRITELN('HORAS EXTRAS FESTIVAS NOCTURNAS    ');
GOTOXY(45,16);READ(HENF);
GOTOXY(12,19);WRITELN('PRESTAMO  ');
GOTOXY(45,19);READ(PR);
DELAY(8500);
CLRSCR;
CUADRO;
GOTOXY(14,5);WRITELN('DEVENGADO ');
SUELU:=BASMEN/30;
SUELT:=SUELU*DT;
GOTOXY(14,9);WRITELN('SUELDO                   :$  ', SUELT:8:2);
AT:=14000.;
IF BASMEN<= 240000. THEN
   BEGIN
   ATT:=AT/30*DT;
   GOTOXY(5,8);WRITELN ('AUXILIO TRANSPORTE    :$  ',ATT:8:2 );
   END
   ELSE
   BEGIN
   ATT:=0;
   GOTOXY(5,8);WRITELN ('AUXILIO TRANSPORTE    :'  ,ATT:5:2);
   END;
RNT:=BASMEN/240*35/100*CRN;
GOTOXY(5,9);WRITELN('VALOR RECARGO NOCTURNO:         ',RNT:6:2);
HEDT:=BASMEN/240*HED*1.25;
GOTOXY(5,10);WRITELN('HORAS EXTRAS DIURNAS' ,HEDT:6:2);
HENT:=BASMEN/240*HEN*1.75;
GOTOXY(5,11);WRITELN('HORAS EXTRAS NOCTURNAS:',HENT:6:2);
HEFT:=BASMEN/240*HEF*2.;
GOTOXY(5,12);WRITELN('HORAS EXTRAS FESTIVAS:',HEFT:6:2);
HEDFT:=BASMEN/240*HEDF*2.25;
GOTOXY(5,13);WRITELN('HORAS EXTRAS DIURNAS FESTIVAS:',HEDFT:6:2);
HENFT:=BASMEN/240*HENF*2.75;
GOTOXY(5,14);WRITELN('HORAS EXTRAS NOCTURNAS FESTIVAS:',HENFT:6:2);
VTHE:=HEDT+HENT+HEFT+HEDFT+HENFT;
GOTOXY(5,15);WRITELN('VALOR TOTAL HORAS EXTRAS:      ',VTHE:6:2);
TDEV:=SUELT+ATT+VTHE+RNT;
GOTOXY(5,20);WRITELN('TOTAL DEVENGADO:',TDEV:6:2);
DELAY(8500);
CLRSCR;
CUADRO;
GOTOXY(28,5);WRITELN('DESCUENTO Y NETO A PAGAR');
PENS:=BASMEN*3.125/100;
GOTOXY(5,8);WRITELN('DESCUENTO FONDO DE PENSIONES:',PENS:6:2);
EPS:=BASMEN*4/100;
GOTOXY(5,9);WRITELN('DESCUENTO SEGURO:',EPS:6:2);
DESCP:=BASMEN*5/100;
GOTOXY(5,10);WRITELN('DESCUENTO PRESTAMO:',DESCP:6:2);
                                IF BASMEN <=500000. THEN
                                BEGIN
                                RFT:=0;
                                GOTOXY(5,11);WRITELN('RETENCION EN LA FUENTE:',RFT:6:2);
                                END
                                ELSE
                                BEGIN
                                IF BASMEN <=800000. THEN
                                BEGIN
                                RFT:=BASMEN*3/100;
                                GOTOXY(5,11);WRITELN('RETENCION EN LA FUENTE:',RFT:6:2);
                                END
                                ELSE
                                BEGIN
                                RFT:=BASMEN*5/100;
                                GOTOXY(5,11);WRITELN('RETENCION EN LA FUENTE:',RFT:6:2);
                                END
                                END;
TDESC:=PENS+EPS+DESCP+RFT;
GOTOXY(5,13);WRITELN('TOTAL DESCUENTO:',TDESC:6:2);
TAP:=TDEV-TDESC;
GOTOXY(5,15);WRITELN('TOTAL A PAGAR:',TAP:6:2);
DELAY (8500);
CLRSCR;
END;
CUADRO;
GOTOXY(8,6);WRITELN('CORPORACION INTERNACIONAL PARA EL DESARROLLO DE LA EDUCACION');
GOTOXY(34,8);WRITELN('C I D E');
GOTOXY(19,11);WRITELN('ADMINISTRACION E INFORMATICA EMPRESARIAL');
