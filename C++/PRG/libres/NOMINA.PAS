GOTOXY(34,14);WRITELN('NOCTURNO');
GOTOXY(30,16);WRITELN('YASMIN GUTIERREZ');
GOTOXY(34,17);WRITELN('4952051');
GOTOXY(31,19);WRITELN('OSCAR MARTINEZ');
GOTOXY(34,20);WRITELN('4952045');
END.
